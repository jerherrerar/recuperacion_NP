extends layout

block content
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="#{url}", method="post", role="form")
        - if (error == "val")
          .alert.alert-danger(role="alert") All fields required, please try again
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="author") Autor
          .col-xs-12.col-sm-10
            input#name.form-control(name="author")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="title") Titulo
          .col-xs-12.col-sm-10
            input#name.form-control(name="title")
        .form-group
          label.col-sm-2.control-label(for="content") Contenido
          .col-sm-10
            textarea#review.form-control(name="content", rows="10")
        button.btn.btn-default.pull-right Agregar Post
    .col-xs-12.col-md-4